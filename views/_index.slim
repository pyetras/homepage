  h2 Projects - Past
  ul
    - for proj in past_projects
      a *{'class'=>proj['class'], 'href'=>proj['href'], 'title'=>proj['name']}
        li
          div.thumbnail
            - if proj.has_key? 'videos'
              video width="auto" height="100%" autoplay=true muted=true loop=true poster=proj['poster']
                - for video in proj['videos']
                  source src=video['src']
          h3: span = proj['name']
          p = proj['description']
